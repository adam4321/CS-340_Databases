{{!  Description:  This view is the component that renders the edit bug page           }}
{{!                where the user is sent when they select edit on a bug in the list   }}

<title>Bug Dashboard</title>
<link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
<link type="image/x-icon" rel="shortcut icon" href="favicon-1.ico"/>
<link type="text/css" rel="stylesheet" href="css/user-home.css">
      

<!-- Container for the dashboard -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="main-box">
    <div id="dashboard-top-bar" class="mdl-card__title mdl-color-text--white">
        <h2 class="mdl-card__title-text">Update Bug</h2>
    </div>

    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm">
            <div class="grid-container">
                <div><label class="textarea-label" for="bug-summary">Bug Summary</label></div>
                <div><textarea required name="bug-summary" id="bug-summary-field">{{editBug.bugSummary}}</textarea></div>
                <div><label class="textarea-label" for="bug-description">Bug Description</label></div>
                <div><textarea required name="bug-description" id="bug-description-field">{{editBug.bugDescription}}</textarea></div>
                <div><label for="bug-project">Project</label></div>
                <div>
                <select name="bug-project" id="bug-project-field">
                    {{#with editBug}} 
                        {{#if this.projectName}}
                            <option value="" selected="selected">{{this.projectName}}</option>
                        {{else}}
                            <option value="0" selected="selected">NULL</option>
                        {{/if}} 
                    {{/with}}
                    <option value="0">NULL</option>
                    {{#each projects}}
                        <option value="{{this.projectId}}">{{this.projectName}}</option>
                    {{/each}}
                </select>          
                </div>
                <div><label for="bug-programmer">Programmers</label></div>
                <div class="checkbox-container">
                    {{#each programmers}}
                        {{#if this.checked}}
                            <input checked="checked" 
                                class="checkbox-input" 
                                type="checkbox" 
                                id="{{this.programmerId}}" 
                                name="programmerId" 
                                value="{{this.programmerId}}"
                            >
                        {{else}}
                            <input class="checkbox-input" 
                                type="checkbox" 
                                id="{{this.programmerId}}" 
                                name="programmerId" 
                                value="{{this.programmerId}}"
                            >
                        {{/if}}
                        <label for="programmer1">{{this.firstName}} {{this.lastName}}</label><br>
                    {{/each}} 
                </div>
                <div><label for="bug-start-date">Date Started</label></div>
                <div><input required type="date" name="bug-start-date" id="bug-start-date-field" value="{{editBug.dateStarted}}"></div>
                <div><label for="bug-priority">Priority</label></div>
                <div><input required type="number" min="1" max="5" name="bug-priority" id="bug-priority-field" value="{{editBug.priority}}"></div>
                
                {{!-- Render the correct state of fixed --}}
                <div><label for="bug-fixed">Fixed</label></div>
                <div>
                    {{#if editBug.fixed}}
                    <input class="radio-input" type="radio" name="bug-fixed" value="1" id="bug-fixed-yes" checked="checked">
                    <label class="radio-label" for="bug-fixed">Yes</label>
                    <input class="radio-input" type="radio" name="bug-fixed" value="0" id="bug-fixed-no">
                    <label class="radio-label" for="bug-fixed">No</label>
                    {{else}}
                    <input class="radio-input" type="radio" name="bug-fixed" value="0" id="bug-fixed-yes">
                    <label class="radio-label" for="bug-fixed">Yes</label>
                    <input class="radio-input" type="radio" name="bug-fixed" value="1" id="bug-fixed-no" checked="checked">
                    <label class="radio-label" for="bug-fixed">No</label>
                    {{/if}}
                </div>
                <div><label class="textarea-label" for="bug-resolution">Resolution</label></div>
                <div><textarea name="bug-resolution" id="bug-resolution-field">{{editBug.resolution}}</textarea></div>
                <div>
                    <input type="submit" id="save" value="Update">
                </div>
            </div>
        </form>
    </div>
</div>


