{{!  Description:  Page View for adding a new programmer      }}

<title>Add Programmer</title>
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <link type="image/x-icon" rel="shortcut icon" href="favicon-1.ico"/>
  <link type="text/css" rel="stylesheet" href="programmer-add.css">
           
<!-- Container for the dashboard -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="main-box">
    <div id="dashboard-top-bar" class="mdl-card__title mdl-color-text--white">
        <h2 class="mdl-card__title-text">Add Programmer</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">

        <!-- <h1>OSU MySQL Results: {{results}}</h1> -->

        <form id="recordForm">
            <fieldset>
        
                <legend>Programmer Details</legend>
        
                <label for="programmer-fname">First name</label>
                <input type="text" name="programmer-fname" id="programmer-fname-field"> <br>

                <label for="programmer-lname">Last name</label>
                <input type="text" name="programmer-lname" id="programmer-lname-field"> <br>

                <label for="programmer-email">Email</label>
                <input type="text" name="user-email" id="programmer-email-field"> <br>
        
                <label for="started-date">Date Started</label>
                <input type="date" name="started-date" id="project-date-started-field"> <br>

                <label for="programmer-access">Access Level</label>
                <input type="number" name="programmer-access" id="programmer-access-field" min="1" max="4"> <br>

                <input 
                    type="submit" id="save" value="Add" 
                    onclick="insertUser(document.getElementById('company-id-field').value,
                                        document.getElementById('project-date-started-field').value,
                                        document.getElementById('project-date-updated-field').value,
                                        document.getElementsByName('maintenance'))">
            </fieldset>
        </form>
    </div>
</div>

