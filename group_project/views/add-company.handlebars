{{!  Description:  Page View for adding a new company       }}

<title>Add Company</title>
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <link type="image/x-icon" rel="shortcut icon" href="favicon-1.ico"/>
  <link type="text/css" rel="stylesheet" href="css/company-add.css">
        
        
<!-- Container for the dashboard -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="main-box">
    <div id="dashboard-top-bar" class="mdl-card__title mdl-color-text--white">
        <h2 class="mdl-card__title-text">Add Company</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">

        <form id="recordForm" action="/updateCompany">
            <fieldset>
                <legend>Add a new Company</legend>
        
                <label for="company-name">Company Name</label>
                <input type="text" name="companyName" id="company-name-field"><br>

                <label for="company-date-joined">Date Joined</label>
                <input type="date" name="dateJoined" id="company-date-joined-field"><br>

                <input type="submit" id="save" value="Add">
            </fieldset>
        </form>
    </div>
</div>
<br>
<!-- Container for Companies Table -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="main-box">
    <div id="dashboard-top-bar" class="mdl-card__title mdl-color-text--white">
        <h2 class="mdl-card__title-text">Current Companies</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">Company Name</th>
                    <th class="mdl-data-table__cell--non-numeric">Date Joined</th>
                </tr>
            </thead>
            <tbody>
                {{#each companies}}
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">{{this.companyName}}</td>
                    <td>{{this.dateJoined}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="js/add-company.js"></script>
